<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:title">@string/empty</item>
    </style>

    <style name="Theme.Custombar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_custombar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Custombar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Custombar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Custombar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Custombar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Custombar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_custombar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_custombar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Custombar</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:title">@string/empty</item>
        <item name="android:displayOptions">useLogo</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Custombar.Widget</item>

    </style>

    <style name="ActionBar.Solid.Custombar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_custombar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_custombar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_custombar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Custombar</item>
    </style>

    <style name="ActionBar.Transparent.Custombar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_custombar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Custombar</item>
    </style>

    <style name="PopupMenu.Custombar" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_custombar</item>
    </style>

    <style name="DropDownListView.Custombar" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_custombar</item>
    </style>

    <style name="ActionBarTabStyle.Custombar" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_custombar</item>
    </style>

    <style name="DropDownNav.Custombar" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_custombar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_custombar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_custombar</item>
    </style>

    <style name="ProgressBar.Custombar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_custombar</item>
    </style>

    <style name="ActionButton.CloseMode.Custombar" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_custombar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Custombar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Custombar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Custombar</item>
    </style>


</resources>
